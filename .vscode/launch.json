{
    "configurations": [
        {
            // requires the go binary to be compiled with proper debug support'
            // see the makefile in the root for such a compilation method
            "name": "Attach to Go Binary",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "processId": "nabu"
        },
        {
            "name": "Debug Shacl Validation",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "args": [
                "harvest",
                "--log-level",
                "DEBUG",
                "--sitemap-index",
                "https://pids.geoconnex.dev/sitemap.xml",
                "--concurrent-sitemaps",
                "100",
                "--sitemap-workers",
                "150",
                "--use-otel",
                "--to-disk",
                "--source",
                "ref_dams_dams__0",
                "--validate-shacl"
            ],
            "program": "${workspaceFolder}/cmd/nabu"
        },
        {
            "name": "Debug Nabu sync command",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/nabu",
            "args": [
                "--log-level",
                "DEBUG",
                "sync",
                "--prefix",
                "summoned/",
                "--endpoint",
                "http://localhost:7200",
                "--repository",
                "iow",
                "--use-otel"
            ]
        },
        {
            "name": "Debug Nabu release command",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/nabu",
            "args": [
                "release",
                "--prefix",
                "summoned/ref_dams_dams__0",
                "--mainstem-metadata",
                "${workspaceFolder}/shacl_validator/data/reference_catchments_and_flowlines.fgb"
            ]
        },
        {
            "name": "Debug Nabu USGS crawl",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/nabu",
            "args": [
                "harvest",
                "--log-level",
                "DEBUG",
                "--sitemap-index",
                "https://geoconnex.us/sitemap.xml",
                "--concurrent-sitemaps",
                "1",
                "--sitemap-workers",
                "1",
                "--use-otel",
                "--source",
                "usgs_monitoring-location_nwisgw_nwisgw__7",
                "--to-disk",
                "--log-level",
                "TRACE"
            ]
        }
    ]
}